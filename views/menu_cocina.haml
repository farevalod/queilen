.menu-cocina
  %h2 COCINA
  
  .accordion#accordion2 
    .accordion-group
      .accordion-heading
        %a.accordion-toggle(data-toggle="collapse" data-parent="#accordion2" href="#collapseOne")
          %span.menu-category Recetas
      #collapseOne.accordion-body.collapse.in
        .accordion-inner
          -categorias.each do |c|
            %a{:href => "/recetas/categorias/#{c.id}"}
              %span.menu-option=c.nombre
      .accordion-heading
        %a.accordion-toggle{:href => '/condimentos'}
          %span.menu-category Condimentos
      .accordion-heading
        %a.accordion-toggle(data-toggle="collapse" data-parent="#accordion2" href="#collapseThree")
          %span.menu-category Utencilios
      .accordion-heading
        %a.accordion-toggle{:href => '/cortes'}
          %span.menu-category Tipos de corte
