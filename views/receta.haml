.spacer
  .span2.menu-cocina
    =haml :menu_cocina, :locals => {:categorias => @categorias }
  .span9
    %img{:src => "/images/recetas/#{@receta.foto}", :class => "rounded"}
    .span2.offset1
      %h5="Dificultad: "+@receta.difficulty.force_encoding("ISO-8859-1").encode("UTF-8")
    .span2
      %h5=@receta.time.to_s+" minutos"
    .span2
      %h5=@receta.servings.to_s+" Porciones"
    .row
    %hr
    %span.chef Receta creada y preparada para <b>Queilén</b> por el <b>Chef Axel Manriquez</b>, de <b>Le Toques Blanches</b>
    .row
    .span4.columna-receta
      .columna-title INGREDIENTES
      =@receta.ingredients
    .span3.columna-receta
      .columna-title PREPARACIÓN
      =@receta.instructions
    .row
    .secreto=@receta.secret
