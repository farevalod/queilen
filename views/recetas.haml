.spacer
  .span2.menu-cocina
    =haml :menu_cocina, :locals => {:categorias => @categorias }
  .span9
    .span9{:id => "welcome-#{@categoria.nombre}"}
    %img{:src => "/images/categorias/#{@categoria.foto}", :class => "rounded"}
    .categoria-description=@categoria.description
    .span6
      -@recetas.each do |r|
        %a{:href => "/recetas/#{r.id}"}
          %img{:src => "/images/q.png"}
          .burdeo.receta-nombre=r.name
